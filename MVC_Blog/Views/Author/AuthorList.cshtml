@model IEnumerable<EntityLayer.Concrete.Author>

@{
    ViewBag.Title = "AuthorList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="color :red">Author List</h2>
<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">            
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var x in Model)
                    {
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                    <div class="card bg-light">
                        <div class="card-header text-muted border-bottom-0">
                            @x.AuthorJob
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@x.AuthorName</b></h2>
                                    <p class="text-muted text-sm"><b>About: </b>@x.AuthorAbout</p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span>@x.Phone</li>
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span>@x.Mail</li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="@x.AuthorImage" alt="" class="img-circle img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="/Author/AuthorBlogList/@x.AuthorID" class="btn btn-sm bg-success">
                                    <i class="fas fa-solid fa-blog"></i>
                                    Blogs
                                </a>
                                <a href="/Author/EditAuthor/@x.AuthorID" class="btn btn-sm btn-warning">
                                    <i class="fas fa-user"></i> Edit Profile
                                </a>
                                <a href="/Author/DeleteAuthor/@x.AuthorID" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                    }
             </div>
            </div>
        </div>            
    </section>
    </div>
</body>
</html>
<br />
<a href="/Author/AddAuthor/" class="btn btn-primary">Add New Author</a>
