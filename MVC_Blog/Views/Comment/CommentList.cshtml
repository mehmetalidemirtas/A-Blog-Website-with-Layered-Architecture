@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="pt-5">
    <h3 class="mb-5">Comments</h3>
    <ul class="comment-list">
        @foreach (var x in Model)
        {
        <li class="comment">
            <div class="vcard">
                <img src="~/BlogTheme/images/person_1.png" alt="Image placeholder">
            </div>
            <div class="comment-body">
                <h3>@x.NameSurname</h3>
                <div class="meta">@(((DateTime)x.CommentDate).ToString("dd-MM-yyyy"))</div>
                <p>@x.CommentText</p>
            </div>
        </li>
        }
    </ul>
    @Html.Action("LeaveComment", "Comment")
</div>
