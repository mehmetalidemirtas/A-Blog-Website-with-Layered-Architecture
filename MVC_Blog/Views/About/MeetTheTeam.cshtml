@model IEnumerable<EntityLayer.Concrete.Author>
<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-5 text-center">
                <h2>Meet The Team</h2>
                <p>Get the opportunity to meet our team by reaching our social media accounts.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var x in Model)
            {
            <div class="col-md-6 col-lg-4 mb-5 text-center">
                <img src="@x.AuthorImage" alt="Image" class="img-fluid w-50 rounded-circle mb-4">
                <h2 class="mb-3 h5">@x.AuthorName</h2>
                <p>@x.AuthorAbout</p>        
                <p class="mt-5">
                    <a href="@x.LinkedinLink" class="p-3"><span class="icon-linkedin"></span></a>
                    <a href="@x.GithubLink" class="p-3"><span class="icon-github"></span></a>
                    <a href="@x.TwitterLink" class="p-3"><span class="icon-twitter"></span></a>
                </p>
            </div>
            }
        </div>
    </div>
</div>
