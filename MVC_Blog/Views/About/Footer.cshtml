                </ul>
            </div>
            <div class="col-md-4">
                <div>
                    <h3 class="footer-heading mb-4">Our Social Media Accounts</h3>
                    <p>
                        @foreach (var y in Model)
                        {
                        <a href="@y.TwitterLink"><span class="icon-twitter p-2"></span></a>
                        <a href="@y.LinkedinLink"><i class="icon-linkedin p-2"></i></a>
                        <a href="mailto:ali.demirtas.developer@gmail.com"><span class="icon-envelope p-2"></span></a>
                        <a href="@y.GithubLink"><span class="icon-github p-2"></span></a>
                        <a href="@y.WebsiteLink"><span class="icon-google p-2"></span></a>
                        }
