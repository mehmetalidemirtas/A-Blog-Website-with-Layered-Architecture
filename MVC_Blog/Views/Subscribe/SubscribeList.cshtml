@model IEnumerable<EntityLayer.Concrete.SubscribeMail>
@{
    ViewBag.Title = "SubscribeList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-3">
                <a style="color:white" class="btn btn-primary btn-block mb-3">Subscribed Emails</a>
                <div class="card">

                    <div class="card-body p-0">
                        <ul class="nav nav-pills flex-column">
                            <li class="nav-item">
                                <a href="/Contact/Inbox/" class="nav-link">
                                    <i class="fas fa-inbox"></i> Inbox
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Contact/Trash/" class="nav-link">
                                    <i class="far fa-trash-alt"></i> Trash
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Subscribe/SubscribeList/" class="nav-link">
                                    <i class="fas fa-solid fa-envelope"></i> Subscribed Emails
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Subscribed Emails</h3>
                        <div class="card-tools">
                            <div class="input-group input-group-sm">
                                <div class="input-group-append">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">

                        <div class="table-responsive mailbox-messages">
                            <table class="table table-hover table-striped">
                                <tbody>
                                    @foreach (var x in Model)
                                    {
                                    <tr>
                                        <td style="width: 5%">
                                            <div class="btn-group">
                                                <a href="/Subscribe/DeleteSubscriber/@x.MailID" class="btn btn-default btn-sm"><i class="far fa-trash-alt"></i></a>
                                            </div>
                                        </td>
                                        <td >
                                            <a>@x.Mail</a>
                                        </td>
                                    </tr>}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            </div>
    </section>
</body>

