@model IEnumerable<EntityLayer.Concrete.Blog>
<div class="sidebar-box">
    <h3 class="heading">Author Popular Posts</h3>
    <div class="post-entry-sidebar">
        <ul>
            @foreach (var x in Model)
            {
            <li>
                <a href="/Blog/BlogDetails/@x.BlogID">
                    <img src="@x.BlogImage" alt="Image placeholder" class="mr-4">
                    <div class="text">
                        <h4>@x.BlogTitle</h4>
                        <div class="post-meta">
                            <span class="mr-2">@(((DateTime)x.BlogDate).ToString("dd-MM-yyyy"))</span>
                        </div>
                    </div>
                </a>
            </li>
            }
        </ul>
    </div>
</div>
