@model EntityLayer.Concrete.Author
@{
    ViewBag.Title = "AddAuthor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="color :red">Add New Author</h2>
<form class="form-group" method="post">
    @Html.Label("Name Surname")
    @Html.TextBoxFor(x => x.AuthorName, new { @class = "form-control" })
    <br />
    @Html.Label("Image")
    @Html.TextBoxFor(x => x.AuthorImage, new { @class = "form-control" })
    <br />
    @Html.Label("Job")
    @Html.TextBoxFor(x => x.AuthorJob, new { @class = "form-control" })
    <br />
    @Html.Label("Skills")
    @Html.TextBoxFor(x => x.AuthorAboutShort, new { @class = "form-control" })
    <br />
    @Html.Label("Mail")
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.Label("Password")
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    <br />
    @Html.Label("Phone")
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <br />
    @Html.Label("About")
    @Html.TextAreaFor(x => x.AuthorAbout, 10, 20, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Save</button>
</form>

