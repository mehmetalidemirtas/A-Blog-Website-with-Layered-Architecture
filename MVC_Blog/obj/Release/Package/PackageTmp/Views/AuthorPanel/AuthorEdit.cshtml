@model IEnumerable<EntityLayer.Concrete.Author>
<div class="tab-pane" id="settings">
    @using (Html.BeginForm("UpdateAuthorProfile", "AuthorPanel", FormMethod.Post))
    {
        foreach (var x in Model)
        {
    <form class="form-horizontal">
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorID" value="@x.AuthorID">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Name Surname</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorName" value="@x.AuthorName">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" name="Mail" value="@x.Mail">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Image</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorImage" value="@x.AuthorImage">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">Job</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorJob" value="@x.AuthorJob">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Phone</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Phone" value="@x.Phone">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Password" value="@x.Password">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">About</label>
            <div class="col-sm-10">
                <textarea class="form-control" name="AuthorAbout">@x.AuthorAbout</textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">Linkedin Link</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="LinkedinLink" value="@x.LinkedinLink">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">Github Link</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="GithubLink" value="@x.GithubLink">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">Twitter Link</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="TwitterLink" value="@x.TwitterLink">
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Submit</button>
            </div>
        </div>
    </form>
        }
    }
</div>
